<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.trv.alex.shareeditor.MainActivity">

    <EditText
        android:id="@+id/shared_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:gravity="top|start"
        android:hint="@string/shared_text_string"/>

    <CheckBox
        android:id="@+id/not_send_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/not_send_text_string"/>

    <TextView
        android:id="@+id/title_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        android:text="@string/shared_files_string"/>

    <ListView
        android:id="@+id/shared_files"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_weight="4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/share_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="@string/share_forward_string"/>

    </LinearLayout>

</LinearLayout>
